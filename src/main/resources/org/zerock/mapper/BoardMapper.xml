<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.zerock.mapper.BoardMapper">
	<!--  -->
    <!-- 게시글 등록 -->
    <insert id="insert" parameterType="org.zerock.dto.BoardDTO">
        INSERT INTO board (name, title, content, email)
        VALUES (#{name}, #{title}, #{content}, #{email})
    </insert>

    <!-- 게시글 목록 조회 -->
    <select id="selectList" resultType="org.zerock.dto.BoardDTO">
        SELECT * FROM board ORDER BY bno DESC
    </select>

    <!-- 게시글 상세 조회 -->
    <select id="selectByBno" parameterType="Long" resultType="org.zerock.dto.BoardDTO">
        SELECT * FROM board WHERE bno = #{bno}
    </select>

</mapper>
